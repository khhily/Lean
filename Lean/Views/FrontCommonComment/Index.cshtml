@model PDM<IEnumerable<CommonComment>, CommonCommentCondition>
@{
    ViewBag.Title = "Index";
    
}

@using (Html.BeginForm())
{
    <div class="panel-info panel">
        <div class="panel-heading clearfix">
            List
        </div>
        <div class="panel-body">
            <table class="table table-hover">
                @if (Model != null && Model.Data != null)
                {
                    foreach (var item in Model.Data)
                    {
                        <tr>
                            <td>
                                <a href="@Url.Action("Detail", new { id = item.ID })?ModuleCode=@(item.ModuleCode)">@(item.DiscussTitle)</a>
                            </td>
                            <td style="width: 200px;">
                                @(item.DiscussDate.ToString("yyyy-MM-dd HH:mm:ss"))
                            </td>
                        </tr>
                    }
                }
            </table>
        </div>

        <div class="panel-footer">
            @if (Model != null && Model.Condition != null)
            {
                @Html.Pager(m => m.Condition.Pager)
            }
        </div>
    </div>
}